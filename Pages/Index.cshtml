@page
@model PruebaTecnica.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="/Productos/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Producto
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Productos.Any())
            {
                <p class="text-muted text-center py-4">No hay productos registrados.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Precio Base</th>
                                <th>Precio Descuento</th>
                                <th>Actualmente</th>
                                <th>Imagen</th>
                                <th>Fecha Creación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model.Productos)
                            {
                                <tr>
                                    <td>@producto.Id</td>
                                    <td>@producto.Nombre</td>
                                    <td>@(producto.Descripcion ?? "N/A")</td>
                                    <td>@producto.PrecioBase.ToString("C")</td>
                                    <td>@(producto.PrecioConDescuento?.ToString("C") ?? "N/A")</td>
                                    <td>
                                        @if (producto.PrecioConDescuento.HasValue)
                                        {
                                            <span class="badge bg-success ms-1">Con descuento</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info ms-1">Sin descuento</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(producto.Imagen))
                                        {
                                            <img src="@producto.Imagen" alt="@producto.Nombre" style="max-width: 50px; max-height: 50px;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin imagen</span>
                                        }
                                    </td>
                                    <td>@producto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="/Productos/Edit" asp-route-id="@producto.Id" class="btn btn-sm btn-warning">
                                                Editar
                                            </a>
                                            <a asp-page="/Productos/EditPrice" asp-route-id="@producto.Id" class="btn btn-sm btn-info">
                                               Editar precio
                                            </a>
                                            <a asp-page="/Productos/Delete" asp-route-id="@producto.Id" class="btn btn-sm btn-danger">
                                                Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>