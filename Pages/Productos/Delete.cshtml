@page
@model PruebaTecnica.Pages.Productos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>¿Está seguro que desea eliminar este producto?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Producto.Id</dd>

                        <dt class="col-sm-3">Nombre</dt>
                        <dd class="col-sm-9">@Model.Producto.Nombre</dd>

                        <dt class="col-sm-3">Descripción</dt>
                        <dd class="col-sm-9">@(Model.Producto.Descripcion ?? "N/A")</dd>

                        <dt class="col-sm-3">Precio Base</dt>
                        <dd class="col-sm-9">@Model.Producto.PrecioBase.ToString("C")</dd>

                        <dt class="col-sm-3">Precio con Descuento</dt>
                        <dd class="col-sm-9">@(Model.Producto.PrecioConDescuento?.ToString("C") ?? "N/A")</dd>

                        <dt class="col-sm-3">Precio Actual</dt>
                        <dd class="col-sm-9">
                            <strong class="text-success">@Model.Producto.PrecioActual.ToString("C")</strong>
                        </dd>

                        <dt class="col-sm-3">Imagen</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Producto.Imagen))
                            {
                                <img src="@Model.Producto.Imagen" alt="@Model.Producto.Nombre" class="img-thumbnail" style="max-width: 200px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin imagen</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Fecha Creación</dt>
                        <dd class="col-sm-9">@Model.Producto.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.Producto.FechaModificacion.HasValue)
                        {
                            <dt class="col-sm-3">Última Modificación</dt>
                            <dd class="col-sm-9">@Model.Producto.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Producto.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>