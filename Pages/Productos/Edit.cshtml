@page
@model PruebaTecnica.Pages.Productos.EditModel
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Producto.Id" />
                        <input type="hidden" asp-for="Producto.FechaCreacion" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Producto.Nombre" class="form-label"></label>
                            <input asp-for="Producto.Nombre" class="form-control" />
                            <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Producto.Descripcion" class="form-label"></label>
                            <textarea asp-for="Producto.Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Producto.PrecioBase" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Producto.PrecioBase" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Producto.PrecioBase" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Producto.PrecioConDescuento" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Producto.PrecioConDescuento" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Producto.PrecioConDescuento" class="text-danger"></span>
                            <small class="form-text text-muted">Opcional. Debe ser menor al precio base</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Producto.Imagen" class="form-label"></label>
                            <input asp-for="Producto.Imagen" class="form-control" />
                            <span asp-validation-for="Producto.Imagen" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <strong>Fecha de creación:</strong> @Model.Producto.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Actualizar Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}